mode "SysEdit" {
    bindsym b exec alacritty -e nvim ~/.bashrc;mode "default";focus
    bindsym s exec alacritty -e nvim ~/.config/sway/config;mode "default";focus
    bindsym w exec alacritty -e nvim ~/.config/waybar/config;mode "default";focus

    # Return to default mode
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

# https://wiki.archlinux.org/title/Desktop_notifications
# notify-send --> https://specifications.freedesktop.org/notification-spec/latest/ar01s02.html
# --icon= --> Choose from: https://specifications.freedesktop.org/icon-naming-spec/icon-naming-spec-latest.html 
bindsym $mod+i exec "notify-send '==Edit System Files==\n b - .bashrc\n w - Waybar \n s - Sway' --icon=dialog-information"; \
        mode "SysEdit"

